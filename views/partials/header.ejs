<!doctype html>
<html>

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Shopping Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css" />
</head>

<body>
  <header class="py-2 mb-3 border-bottom">
    <div class="container d-flex align-items-center">
      <a class="me-3 fs-5 text-decoration-none" href="/products">Products</a>
      <a class="me-auto text-decoration-none" href="/cart">Cart</a>
      <div id="auth-area" class="d-inline-block" style="margin-left:20px;">
        <!-- fallback auth links (session.js will replace dynamically) -->
        <a href="/auth/login" id="btn-login" class="btn btn-sm btn-outline-primary me-2">Login</a>
        <a href="/auth/register" class="btn btn-sm btn-outline-secondary">Register</a>
      </div>
    </div>
  </header>

  <main class="container">
    <!-- add socket + session client script (will run on every page) -->
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/client.js"></script>
    <script src="/js/session.js"></script>
  </main>
</body>

</html>